[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
serika-yellow = #fecd04
serika-dark = #323337

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/example]
width = 100%
height = 27
radius = 0.0
fixed-center = true

monitor = ${env:MONITOR}

background = ${colors.serika-dark}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = FontAwesome:pixelsize=10;0

modules-left = i3
modules-center = date time
modules-right = xbacklight pulseaudio temperature memory battery wlan_home wlan_work eth_home eth_work

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100
time-format = %H:%M

label-charging = %percentage%% (%time%)
label-discharging = %percentage%% (%time%)

format-charging = <label-charging>
format-charging-prefix = " "
format-charging-underline = ${colors.serika-yellow}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = %{F#ff0000}
ramp-capacity-1 = %{F#ff0000}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/date]
type = internal/date
interval = 5

date = " %A %d %B"
date-alt = "  %Y-%m-%d "

format-prefix = 
format-underline = ${colors.serika-yellow}

label = %date%

[module/time]
type = internal/date
interval = 5

time = "  %H:%M"
time-alt = "  %H:%M"

format-prefix = 
format-underline = ${colors.serika-yellow}

label = %time%

[module/eth_home]
type = internal/network
interface = enp11s0
interval = 3.0

format-connected-prefix = " "
format-connected-underline = ${colors.serika-yellow}
label-connected = %local_ip%

format-disconnected =
format-disconnected-foreground = ${colors.foreground-alt}
format-disconnected-prefix = " "
format-disconnected-underline = ${colors.alert}
label-disconnected = not connected
label-disconnected-foreground = ${colors.foreground-alt}

[module/eth_work]
